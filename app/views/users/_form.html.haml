= form_for @auth, :url => '/profile' do |f|

  .field
    = label_tag :username
    = f.text_field :username

  .field
    = label_tag :tagline
    = f.text_field :tagline

  .field
    = f.radio_button(:gender, 'male')
    = label_tag(:gender_label, 'Male')
    = f.radio_button(:gender, 'female')
    = label_tag(:gender_label, 'Female')

  .field
    = label_tag :age
    = f.number_field :age

  .field
    = label_tag :ethnicity
    = f.text_field :ethnicity

  .field
    = label_tag :city
    = f.text_field :city

  .field
    = label_tag :state
    = f.text_field :state

  .field
    = label_tag :description
    = f.text_area :description

  .field
    = label_tag :email
    = f.text_field :email

  .field
    = label_tag :password
    = f.password_field :password

  .field
    = label_tag :password_confirmation
    = f.password_field :password_confirmation

  .field
    = f.submit